#define dbg(...) __dbg(#__VA_ARGS__, __VA_ARGS__)
template <typename Arg1>
void __dbg(const char* name, Arg1&& arg1){cerr << name << " : " << arg1 << std::endl;}
template <typename Arg1, typename... Args>
void __dbg(const char* names, Arg1&& arg1, Args&&... args){const char* comma = strchr(names + 1, ',');cerr.write(names, comma - names) << " : " << arg1<<" | ";__dbg(comma+1, args...);}


#define _N 100005


int v,e;
vector<pii> g[_N];

int prims(){
    vector<int> parent(v,0);
    vector<int> weight(v,INF);
    vector<bool> visited(v,0);

    priority_queue<pii,vector<pii>,greater<pii>> pq;
    pq.push({0,0});

    while(!pq.empty()){ 
        pii top=pq.top();
        int front=top.se;
        pq.pop();
        
        if(visited[front])
            continue;
        visited[front]=1;

        For(i,sz(g[front])){
            int cV=g[front][i].fi;
            int cW=g[front][i].se;
            if(!visited[cV] && cW<weight[cV]){
              parent[cV]=front;
              weight[cV]=cW;
              pq.push({cW,cV});
            }          
        }
    }

  int minCost=0;
  FOR(i,1,v){
    cout<<min(parent[i],i)<<" "<<max(parent[i],i)<<" "<<weight[i]<<endl;
    minCost+=weight[i];
}

return minCost;
}

int main(){
    fast_io;
    //sublimeProblem;

    cin>>v>>e;
    For(i,e){
        int a,b,w;
        cin>>a>>b>>w;
        g[a].pb({b,w});
        g[b].pb({a,w});
    }

    int minCost=prims();
    // dbg(minCost);
}
